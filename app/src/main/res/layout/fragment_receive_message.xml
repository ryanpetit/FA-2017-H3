<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recieve_constraint_layout"
    tools:context="com.fa17.ssu385.fa_2017_h3.ReceiveMessageFragment">

    <LinearLayout
        android:id="@+id/recieve_linear_layout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/recieve_constraint_layout"
        app:layout_constraintRight_toRightOf="@+id/recieve_constraint_layout"
        app:layout_constraintTop_toTopOf="@+id/recieve_constraint_layout">

        <TextView
            android:id="@+id/recieve_linear1_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="you have recieved a message from: "/>

        <TextView
            android:id="@+id/recieve_linear1_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recieve_linear_layout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/recieve_constraint_layout"
        app:layout_constraintRight_toRightOf="@+id/recieve_constraint_layout"
        app:layout_constraintTop_toBottomOf="@+id/recieve_linear_layout1"
        app:layout_constraintBottom_toBottomOf="@+id/recieve_constraint_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recieve_linear2_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/recieve_linear2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_weight="0"
            android:layout_gravity="center_horizontal"
            android:text="reply"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
